{
  "AWSEBDockerrunVersion": 1,
  "volumes": [
    {
      "name": "coinhive-proxy",
      "host": {
        "sourcePath": "/var/app/current"
      }
    },
    {
      "name": "nginx-proxy-conf",
      "host": {
        "sourcePath": "/var/app/current/nginx/conf.d"
      }
    }  
  ],
  "containerDefinitions": [
    {
      "name": "coinhive-proxy",
      "image": "handycodejob/coinhive-stratum-mining-proxy",
      "essential": true,
      "memory": 128,
      "environment": [
        {
          "name": "STRATUM_POOL",
          "value": "pool.supportxmr.com"
        },
        {
          "name": "STRATUM_PORT",
          "value": "2999"
        },
        {
          "name": "STRATUM_PASS",
          "value": "TEST1:mikejackofalltrades@gmail.com "
        }
      ]
    },
    {
      "name": "nginx-proxy",
      "image": "nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "coinhive-proxy"
      ],
      "mountPoints": [
        {
          "sourceVolume": "coinhive-proxy",
          "containerPath": "/var/app/current/static"
        },
        {
          "sourceVolume": "nginx-proxy-conf",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        },
        {
          "sourceVolume": "awseb-logs-nginx-proxy",
          "containerPath": "/var/log/nginx"
        }
      ]
    }
  ]
}
